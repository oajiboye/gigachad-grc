{
  "name": "gigachad-grc",
  "private": true,
  "workspaces": [
    "services/shared",
    "services/controls",
    "services/frameworks",
    "services/policies",
    "services/tprm",
    "services/trust",
    "services/audit",
    "frontend"
  ],
  "scripts": {
    "validate:production": "./scripts/validate-production.sh",
    "validate:production:strict": "./scripts/validate-production.sh --strict",
    "backup": "./deploy/backup.sh",
